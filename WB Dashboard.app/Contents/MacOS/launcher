#!/bin/bash

# –ü–æ–ª—É—á–∞–µ–º –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
APP_DIR="$(dirname "$0")"
CONTENTS_DIR="$(dirname "$APP_DIR")"
APP_BUNDLE_DIR="$(dirname "$CONTENTS_DIR")"
PROJECT_DIR="$(dirname "$APP_BUNDLE_DIR")"

echo "üîç –û—Ç–ª–∞–¥–∫–∞ –ø—É—Ç–µ–π:"
echo "APP_DIR: $APP_DIR"
echo "CONTENTS_DIR: $CONTENTS_DIR"
echo "APP_BUNDLE_DIR: $APP_BUNDLE_DIR"
echo "PROJECT_DIR: $PROJECT_DIR"

# –ü–µ—Ä–µ—Ö–æ–¥–∏–º –≤ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é –ø—Ä–æ–µ–∫—Ç–∞
cd "$PROJECT_DIR"
echo "üìÅ –¢–µ–∫—É—â–∞—è –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—è: $(pwd)"

# –ü—Ä–æ–≤–µ—Ä—è–µ–º –Ω–∞–ª–∏—á–∏–µ —Ñ–∞–π–ª–æ–≤
if [ ! -f "dashboard_final.py" ]; then
    echo "‚ùå –û—à–∏–±–∫–∞: dashboard_final.py –Ω–µ –Ω–∞–π–¥–µ–Ω –≤ $(pwd)"
    echo "üìã –°–æ–¥–µ—Ä–∂–∏–º–æ–µ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏:"
    ls -la
    read -p "–ù–∞–∂–º–∏—Ç–µ Enter –¥–ª—è –≤—ã—Ö–æ–¥–∞..."
    exit 1
fi

# –ü—Ä–æ–≤–µ—Ä—è–µ–º –≤–∏—Ä—Ç—É–∞–ª—å–Ω–æ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ
if [ -d "venv" ]; then
    echo "‚úÖ –í–∏—Ä—Ç—É–∞–ª—å–Ω–æ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ –Ω–∞–π–¥–µ–Ω–æ"
    source venv/bin/activate
else
    echo "‚ö†Ô∏è –í–∏—Ä—Ç—É–∞–ª—å–Ω–æ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ, –∏—Å–ø–æ–ª—å–∑—É–µ–º —Å–∏—Å—Ç–µ–º–Ω—ã–π Python"
fi

# –ü—Ä–æ–≤–µ—Ä—è–µ–º launcher.py
if [ -f "launcher.py" ]; then
    echo "‚úÖ launcher.py –Ω–∞–π–¥–µ–Ω"
    python3 launcher.py
else
    echo "‚ùå launcher.py –Ω–µ –Ω–∞–π–¥–µ–Ω, –∑–∞–ø—É—Å–∫–∞–µ–º dashboard_final.py –Ω–∞–ø—Ä—è–º—É—é"
    # –ù–∞—Ö–æ–¥–∏–º —Å–≤–æ–±–æ–¥–Ω—ã–π –ø–æ—Ä—Ç
    PORT=$(python3 -c "
import socket
s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.bind(('', 0))
s.listen(1)
print(s.getsockname()[1])
s.close()
")
    echo "üåê –ò—Å–ø–æ–ª—å–∑—É–µ–º –ø–æ—Ä—Ç: $PORT"
    python3 -m streamlit run dashboard_final.py --server.port $PORT --server.headless true
    echo "üåê –ü—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –¥–æ—Å—Ç—É–ø–Ω–æ –ø–æ –∞–¥—Ä–µ—Å—É: http://localhost:$PORT"
fi

# –ñ–¥–µ–º –Ω–∞–∂–∞—Ç–∏—è –∫–ª–∞–≤–∏—à–∏ –ø–µ—Ä–µ–¥ –∑–∞–∫—Ä—ã—Ç–∏–µ–º
read -p "–ù–∞–∂–º–∏—Ç–µ Enter –¥–ª—è –∑–∞–∫—Ä—ã—Ç–∏—è..."
